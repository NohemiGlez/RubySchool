<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Events</h1>

  <div class="table-responsive-md">
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Start date</th>
          <th scope="col">End date</th>
          <th scope="col">Max students</th>
          <th scope="col">Description</th>
          <th scope="col" colspan="4"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.name %></td>
            <td><%= event.start_date %></td>
            <td><%= event.end_date %></td>
            <td><%= event.max_students %></td>
            <td><%= event.description %></td>
            <td><%= link_to 'Show', event, :class => "text-info btn btn-default" %></td>
            <td><%= link_to 'Edit', edit_event_path(event), :class => "btn btn-default" %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, :class => "text-danger btn btn-default" %></td>
            <td><%= link_to 'Register', register_to_event_path(event), :class => "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
  <%= link_to 'New Event', new_event_path, :class => "btn btn-primary btn-lg" %>
</div>
