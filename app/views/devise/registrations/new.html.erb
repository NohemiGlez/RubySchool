<h2><%= t('devise.views.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label  t('devise.views.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field form-group">
      <%= f.label t('devise.views.first_name') %><br />
      <%= f.text_field :first_name, :class => "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label t('devise.views.last_name') %><br />
      <%= f.text_field :last_name, :class => "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label t('devise.views.date_of_birth') %><br />
      <%= f.date_select :date_of_birth, start_year: Date.today.year, end_year: Date.today.year - 100 %>
    </div>

  <div class="actions">
    <%= f.submit t('devise.views.sign_up')  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
